                    url: '<?=str_replace(['##ID##'],[$iItemID],$oField->url_list)?>',
                    dataType: 'json'
                },
                <?php
                if($oField->tbl_permission != '') {
                    $aPermissionInfo = explode('-', $oField->tbl_permission);
                    if(CoreController::$oSession->oUser->hasPermission($aPermissionInfo[0], $aPermissionInfo[1])) { ?>
                tags: true,
