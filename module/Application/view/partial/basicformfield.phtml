                    }
                } else {
                    if(is_array($this->oItem->getTextField($oField->fieldkey))) {
                        foreach ($this->oItem->getTextField($oField->fieldkey) as $aVal) { ?>
                        var option = new Option('<?=$aVal['text']?>', <?=$aVal['id']?>, true, true);
