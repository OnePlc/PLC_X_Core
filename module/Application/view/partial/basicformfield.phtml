                        $oFirst = ['id' => 1,'text' => 'No'];
                    }
                    break;
                default:
                    break;
            }
        }
        ?>
        <select class="form-control" name="<?=$this->sFormName?>_<?=$oField->fieldkey?>" id="plc-select-<?=$this->sFormName?>_<?=$oField->fieldkey?>"<?=$sExtraAttributes?> >
